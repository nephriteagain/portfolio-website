---
import { technologies } from "../data";
---


<section id="technologies" class="select-none w-[90%] max-w-[848px] my-12 bg-secondary p-6 rounded-lg shadow-lg drop-shadow-lg">
    <h1 class="text-2xl font-bold text-center mb-8">
        Technologies
    </h1>    
    <div class="flex flex-row flex-wrap gap-2 justify-between">
        {technologies.map(t => {
            return (
                <div class="text-lg sm:text-base font-bold odd:bg-background odd:text-primary even:bg-primary  even:text-dark shadow-md drop-shadow-md px-3 py-1 rounded-md border-4 border-transparent hover:odd:bg-primary hover:odd:text-dark hover:even:bg-background hover:even:text-primary transition-all duration-150">
                    {t}
                </div>
            )
        })}
    </div>
</section>