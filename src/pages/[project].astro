---
import { data } from "../data";
import type { projectData } from "../data";
import type { GetStaticPaths } from "astro";
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
export const getStaticPaths = (() => {
    
    return [
        {params: {project: 'test-generator'}},
        {params: {project: 'chat-connect'}},
        {params: {project: 'quiz-generator'}},
        {params: {project: 'damath-online'}},
    ];
}) satisfies GetStaticPaths;

const {project}   = Astro.params
const currentProject = data.find(p => p.id === project) as projectData
if (!currentProject) {
    return Astro.redirect('/404')
}

const { name, features, image, github, site, id, description, stack } = currentProject
---
<Layout title={`${name} - Jade Barry Lazo`}>
    <!-- Navigation -->
    <nav class="z-20 fixed flex flex-row text-lg bg-background/90 backdrop-blur-sm w-full border-b border-border shadow-lg gap-6 px-6 py-4">
        <a href="/" class="text-text hover:text-accent transition-all duration-200">
            ← Back to Portfolio
        </a>
        <div class="flex gap-4 ms-auto">
            {site && (
                <a href={site} target="_blank" class="text-text hover:text-accent transition-all duration-200">
                    Live Demo
                </a>
            )}
            {github.length > 0 && (
                <a href={github[0]} target="_blank" class="text-text hover:text-accent transition-all duration-200">
                    View Code
                </a>
            )}
        </div>
    </nav>

    <main class="pt-20 pb-16">
        <!-- Hero Section -->
        <section class="w-full max-w-6xl mx-auto px-4 py-12">
            <div class="text-center mb-12">
                <h1 transition:name={id} class="text-4xl md:text-6xl font-bold text-text mb-6">
                    {name}
                </h1>
                <p class="text-xl text-text-muted mb-8 max-w-2xl mx-auto leading-relaxed">
                    {description}
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center">
                    {site && (
                        <a href={site} target="_blank" class="bg-accent hover:bg-accent-hover text-white px-8 py-3 rounded-lg font-semibold transition-all duration-200 transform hover:scale-105 inline-flex items-center justify-center gap-2">
                            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                            </svg>
                            View Live Demo
                        </a>
                    )}
                    {github.length > 0 && (
                        <a href={github[0]} target="_blank" class="border border-accent text-accent hover:bg-accent hover:text-white px-8 py-3 rounded-lg font-semibold transition-all duration-200 inline-flex items-center justify-center gap-2">
                            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2Z"/>
                            </svg>
                            View Source
                        </a>
                    )}
                </div>
            </div>
        </section>

        <!-- Project Image and Details -->
        <section class="w-full max-w-6xl mx-auto px-4 mb-16">
            <div class="grid lg:grid-cols-2 gap-12 items-start">
                <!-- Project Image -->
                <div class="relative">
                    <div class="bg-secondary/5 border border-border rounded-xl overflow-hidden">
                        <Image 
                            src={image}
                            alt={name}
                            decoding="async"
                            loading="lazy"
                            class="w-full h-auto object-cover hover:scale-105 transition-transform duration-300"
                        />
                    </div>
                </div>

                <!-- Project Info -->
                <div class="space-y-8">
                    <!-- Technology Stack -->
                    <div>
                        <h2 class="text-2xl font-bold text-text mb-4">Technology Stack</h2>
                        <div class="flex flex-wrap gap-2">
                            {stack.map(tech => (
                                <span class="px-3 py-1 text-sm font-medium bg-accent/20 text-accent rounded-lg border border-accent/30">
                                    {tech}
                                </span>
                            ))}
                        </div>
                    </div>

                    <!-- Key Features -->
                    <div>
                        <h2 class="text-2xl font-bold text-text mb-4">Key Features</h2>
                        <ul class="space-y-3">
                            {features.map(feature => (
                                <li class="flex items-start space-x-3">
                                    <div class="w-6 h-6 bg-accent rounded-full flex-shrink-0 mt-0.5 flex items-center justify-center">
                                        <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                                        </svg>
                                    </div>
                                    <span class="text-text-muted">{feature}</span>
                                </li>
                            ))}
                        </ul>
                    </div>

                    <!-- Links -->
                    <div>
                        <h2 class="text-2xl font-bold text-text mb-4">Project Links</h2>
                        <div class="space-y-3">
                            {site && (
                                <a href={site} target="_blank" class="flex items-center space-x-3 p-3 bg-secondary/5 border border-border rounded-lg hover:border-accent transition-all duration-200 group">
                                    <div class="w-10 h-10 bg-accent/20 group-hover:bg-accent rounded-lg flex items-center justify-center flex-shrink-0">
                                        <svg class="w-5 h-5 text-accent group-hover:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="font-semibold text-text">Live Demo</p>
                                        <p class="text-text-muted text-sm">View the deployed application</p>
                                    </div>
                                </a>
                            )}
                            
                            {github.map((repo, index) => (
                                <a href={repo} target="_blank" class="flex items-center space-x-3 p-3 bg-secondary/5 border border-border rounded-lg hover:border-accent transition-all duration-200 group">
                                    <div class="w-10 h-10 bg-accent/20 group-hover:bg-accent rounded-lg flex items-center justify-center flex-shrink-0">
                                        <svg class="w-5 h-5 text-accent group-hover:text-white" fill="currentColor" viewBox="0 0 24 24">
                                            <path d="M12 2A10 10 0 0 0 2 12c0 4.42 2.87 8.17 6.84 9.5c.5.08.66-.23.66-.5v-1.69c-2.77.6-3.36-1.34-3.36-1.34c-.46-1.16-1.11-1.47-1.11-1.47c-.91-.62.07-.6.07-.6c1 .07 1.53 1.03 1.53 1.03c.87 1.52 2.34 1.07 2.91.83c.09-.65.35-1.09.63-1.34c-2.22-.25-4.55-1.11-4.55-4.92c0-1.11.38-2 1.03-2.71c-.1-.25-.45-1.29.1-2.64c0 0 .84-.27 2.75 1.02c.79-.22 1.65-.33 2.5-.33c.85 0 1.71.11 2.5.33c1.91-1.29 2.75-1.02 2.75-1.02c.55 1.35.2 2.39.1 2.64c.65.71 1.03 1.6 1.03 2.71c0 3.82-2.34 4.66-4.57 4.91c.36.31.69.92.69 1.85V21c0 .27.16.59.67.5C19.14 20.16 22 16.42 22 12A10 10 0 0 0 12 2Z"/>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class="font-semibold text-text">
                                            {github.length > 1 ? `Source Code ${index === 0 ? '(Frontend)' : '(Backend)'}` : 'Source Code'}
                                        </p>
                                        <p class="text-text-muted text-sm">View the code on GitHub</p>
                                    </div>
                                </a>
                            ))}
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Back to Portfolio -->
        <section class="w-full max-w-6xl mx-auto px-4 text-center">
            <a href="/#projects" class="inline-flex items-center text-accent hover:text-accent-hover font-medium transition-colors duration-200 text-lg">
                ← Back to All Projects
            </a>
        </section>
    </main>
</Layout>